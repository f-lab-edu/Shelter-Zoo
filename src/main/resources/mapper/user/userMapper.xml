<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.noint.shelterzoo.repository.user.UserRepository">
    <select id="isExistEmail" parameterType="string" resultType="int">
        SELECT COUNT(*)
        FROM user
        WHERE email = #{email};
    </select>
    <select id="isExistNickname" parameterType="string" resultType="int">
        SELECT COUNT(*)
        FROM user
        WHERE nickname = #{nickname};
    </select>
    <insert id="signup" parameterType="com.noint.shelterzoo.vo.user.UserVO$Signup">
        INSERT INTO user(email, password, nickname)
        VALUE(#{email}, #{password}, #{nickname});
    </insert>
</mapper>
